<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_grey"
    android:id="@+id/root_view"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/crimson"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/black_gradient"
                    android:scaleType="centerCrop"
                    android:src="@color/crimson" />
                <TextView
                    android:id="@+id/greeting_textview"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:fontFamily="MONOSPACE"
                    android:paddingLeft="10dp"
                    android:text="@string/urunekledetay"
                    android:textColor="@color/white"
                    android:textSize="24dp" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/cop"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:layout_toEndOf="@+id/greeting_textview"/>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:id="@+id/linearbaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginEnd="5dp">

            <Button
                android:id="@+id/btnSatisKurallari"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="SATIŞ KURALLARI" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_below="@+id/btnSatisKurallari"
                android:layout_marginLeft="10dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnfoto1"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/red_border"
                    android:drawableLeft="@drawable/foto"
                    android:text="Fotoğraf Ekle"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/btnfoto2"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/red_border"
                    android:drawableLeft="@drawable/foto"
                    android:text="Fotoğraf Ekle"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_below="@+id/btnSatisKurallari"
                android:layout_marginLeft="10dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnfoto3"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:background="@drawable/red_border"
                    android:drawableLeft="@drawable/foto"
                    android:text="Fotoğraf Ekle"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/btnfoto4"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/red_border"
                    android:drawableLeft="@drawable/foto"
                    android:text="Fotoğraf Ekle"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:layout_marginTop="10dp"
                android:text="Ne Satıyorsun?"
                android:textColor="@color/black" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:layout_marginTop="10dp"
                android:text="Kategori"
                android:textColor="@color/black" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:layout_marginTop="10dp"
                android:text="Açıklama"
                android:textColor="@color/black" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:layout_marginTop="10dp"
                android:text="Fiyat"
                android:textColor="@color/black" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:layout_marginTop="10dp"
                android:text="Fatura Bilgileri"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>