<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/transparent"
        android:src="@mipmap/back_arrow_icon"
        android:id="@+id/back_button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sifremi_unuttum"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="MONOSPACE"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/relativeLayout3"
        android:layout_centerHorizontal="true">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_text"
            android:background="@color/little_transparent"
            android:textColorHint="#888888"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Eposta adresi"
            android:paddingLeft="20dp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/tamam"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:id="@+id/login_button"
        android:background="@color/crimson"
        android:textColor="@color/white"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/relativeLayout3"
        android:layout_alignEnd="@+id/relativeLayout3" />


</RelativeLayout>
